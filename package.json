{
  "name": "tcsg",
  "displayName": "Tailwind Components Snippet Generator",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [{
        "id": "snippetExplorerTCSG",
        "title": "TCSG Snippets",
        "icon": "./img/icon.svg"
      }]
    },
    "views": {
      "snippetExplorerTCSG": [{
        "id": "snippetExplorerTCSG",
        "name": "TCSG Snippets",
        "when": "true"
      }]
    },
    "menus": {
      "view/title": [
        {
          "command": "tcsg.selectIOFiles",
          "when": "view == snippetExplorerTCSG",
          "group": "navigation@1"
        },
        {
          "command": "tcsg.buildTailwind",
          "when": "view == snippetExplorerTCSG",
          "group": "navigation@2"
        },
        {
          "command": "tcsg.clearIOFiles",
          "when": "view == snippetExplorerTCSG",
          "group": "navigation@3"
        }
      ]
    },
    "commands": [
      {
        "command": "tcsg.showCustomizationUI",
        "title": "TCSG: Show Customization UI"
      },
      {
        "command": "tcsg.insertSnippet",
        "title": "TCSG: Insert Snippet"
      },
      {
        "command": "tcsg.clearIOFiles",
        "title": "TCSG: Clear Input/Output Files",
        "icon": "$(trash)"
      },
      {
        "command": "tcsg.selectIOFiles",
        "title": "TCSG: Select Input/Output Files",
        "icon": "$(go-to-file)"
      },
      {
        "command": "tcsg.buildTailwind",
        "title": "TCSG: Build Tailwind",
        "icon": "$(debug-start)"
      }
    ],
    "configuration": {
      "title": "TCSG",
      "properties": {
        "tcsg.tailwindInputFilePath": {
          "type": "string",
          "default": "",
          "description": "The path to the Tailwind CSS input file"
        },
        "tcsg.tailwindOutputFilePath": {
          "type": "string",
          "default": "",
          "description": "The path to the Tailwind CSS output file"
        }
      }
    },
    "snippets": [
      {
        "language": "html",
        "path": "./snippets/html.json"
      },
      {
        "language": "javascript",
        "path": "./snippets/javascript.json"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.87.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9"
  }
}
